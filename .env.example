# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ercp

# SQL Debugging (set to true to see SQL queries)
SQL_ECHO=false

# Use NullPool for serverless deployments (AWS Lambda, Cloud Functions)
USE_NULL_POOL=false

# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-random-secret-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Key Authentication (comma-separated list)
API_KEYS=dev-key-1,dev-key-2,dev-key-3

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Model Configuration
DEFAULT_GENERATE_MODEL=gpt2
DEFAULT_NLI_MODEL=microsoft/deberta-v3-base-mnli-fever-anli
DEFAULT_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Warm up models on startup (comma-separated: generate,nli,embedding)
WARM_UP_MODELS=nli,embedding

# ERCP Configuration
DEFAULT_MAX_ITERATIONS=20
DEFAULT_MAX_CONSTRAINTS=30
DEFAULT_SIMILARITY_THRESHOLD=0.95
DEFAULT_VERIFY_THRESHOLD=0.75
DEFAULT_CANDIDATE_THRESHOLD=0.60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_BURST=20

# Server Configuration
HOST=0.0.0.0
PORT=8080
WORKERS=1
RELOAD=false

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
