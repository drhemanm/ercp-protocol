# ERCP Protocol - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ========================================
# Security & Authentication
# ========================================
# CRITICAL: Generate secure random keys for production
# Generate with: openssl rand -hex 32
# Minimum length: 32 characters
JWT_SECRET_KEY=REPLACE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
APP_SECRET_KEY=REPLACE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
API_KEY_SALT=your-api-key-salt

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql+asyncpg://ercp_user:ercp_pass@localhost:5432/ercp
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ========================================
# Redis Cache
# ========================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# ========================================
# ML Models Configuration
# ========================================
# Generation Model
GENERATE_MODEL_NAME=gpt2
GENERATE_MODEL_CACHE_DIR=./models/cache

# NLI Model for Verification
NLI_MODEL_NAME=microsoft/deberta-v3-large-mnli

# Sentence Transformer for Stability
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# SpaCy Model
SPACY_MODEL=en_core_web_sm

# ========================================
# Model Inference Settings
# ========================================
DEVICE=cpu
# Set to 'cuda' if GPU available, or 'cuda:0', 'cuda:1' for specific GPU
MAX_BATCH_SIZE=8
MODEL_TIMEOUT=30

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json
# Options: json, console

# ========================================
# Monitoring
# ========================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ========================================
# Application Settings
# ========================================
APP_NAME=ERCP Protocol Server
APP_VERSION=1.0.0
ENVIRONMENT=development
# Options: development, staging, production

# ========================================
# ERCP Protocol Configuration
# ========================================
DEFAULT_MAX_ITERATIONS=20
DEFAULT_MAX_CONSTRAINTS=30
DEFAULT_SIMILARITY_THRESHOLD=0.95
DEFAULT_VERIFY_THRESHOLD=0.75
DEFAULT_CANDIDATE_THRESHOLD=0.60
