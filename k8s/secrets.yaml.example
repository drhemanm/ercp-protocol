# Example Kubernetes Secrets
# Copy this file to secrets.yaml and update with your actual values
# Then apply with: kubectl apply -f k8s/secrets.yaml
# DO NOT commit secrets.yaml to version control!

apiVersion: v1
kind: Secret
metadata:
  name: ercp-secrets
type: Opaque
stringData:
  database-url: "postgresql+asyncpg://user:password@postgres-service:5432/ercp"
  redis-url: "redis://redis-service:6379/0"
  jwt-secret-key: "your-jwt-secret-key-change-this"
  app-secret-key: "your-app-secret-key-change-this"
